<% unless flash.empty? %>
	<script type="text/javascript">
	<% flash.each do |f| %>
		<% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
		<% if f[1].kind_of?(Array) %>
			toastr['<%= type %>']('<%= f[1][0] %>')
		<% else %>
			toastr['<%= type %>']('<%= f[1] %>')
		<% end %>
	<% end %>
	</script>
<% end %>