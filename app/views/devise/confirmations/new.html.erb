<div class="row">
  <div class="col col-sm-4 col-sm-offset-4">
    <div id="resend-form" class="sign-form-border">
		<h2 class="text-xs-center">Renvoyer les instructions de confirmation</h2>

		<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
		  <%= render partial: "common/devisealerts" %>

		  <div class="form-group">
            <%= f.label :email, "Adresse email" %>
            <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control", placeholder: "Entrez votre adresse email" %>
          </div>

		  <div class="text-xs-center">
		    <%= f.submit "Renvoyer les insctructions", class: "btn btn-success" %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>

		</div>
	</div>
</div>
