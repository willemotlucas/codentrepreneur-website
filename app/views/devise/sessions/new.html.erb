<div class="row">
  <div class="col col-sm-4 col-sm-offset-4">
    <div id="sign-in-form" class="sign-form-border">

    <h2 class="text-xs-center">Connexion Ã  votre compte</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render partial: "common/devisealerts" %>
      
      <div class="form-group">
        <%= f.label :email, "Adresse email" %>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Entrez votre adresse email" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Mot de passe" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Entrez votre mot de passe" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Se souvenir de moi" %>
        </div>
      <% end -%>

      <div class="text-xs-center">
        <%= f.submit "Connexion", class: "btn btn-success" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
