<!DOCTYPE html>
<html>
  <head>
    <title>Website</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

	<nav id="navbar" class="navbar navbar-light bg-faded">
	<!-- To modify with link_to -->
	  <%= link_to "{Codentrepreneur;}", root_path, class: "navbar-brand" %>
	  <ul class="nav navbar-nav pull-xs-right">
	    <li class="nav-item">
	      	<a class="nav-link" href="#">Projets</a>
	    </li>
	    <li class="nav-item">
	    	<%= link_to "Connexion", new_user_session_path, class: "nav-link" %>
	    </li>
	  	<li class="nav-item">
	  		<%= link_to "Inscription", new_user_registration_path, class: "btn btn-outline-success" %>
	  	</li>
	  </ul>
	</nav>

	<% if notice %>
		<div class="container">
			<div class="alert alert-success" role="alert">
			  <%= notice %>
			</div>
		</div>
	<% end %>

	<% if alert %>
		<div class="container">
			<div class="alert alert-danger" role="alert">
			  <%= alert %>
			</div>
		</div>
	<% end %>

    <%= yield %>

    <footer>
    	<!-- Put something -->
    </footer>

  </body>

</html>
