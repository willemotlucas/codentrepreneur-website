	    <li class="nav-item">
	    	<%= link_to "Projets", 	projects_path, class: "nav-link" %>
	    </li>

	    <% if user_signed_in? %>
           	<li class="nav-item btn-group">
		    	<div class="dropdown">
				  <a class="btn btn-outline-success dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
