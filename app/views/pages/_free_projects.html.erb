<section id="free-projects">
	<div class="container">
		<div class="row">
			<div class="col col-sm-12">
				<h1>Les formations gratuites</h1>
				<div class="feature-card">
					<div class="col col-lg-6 col-xs-12">
						<img class="feature-card-image img-fluid" src="http://placehold.it/600x350" alt="" />
						<%= render partial: "common/tags", object: @free_project.tags, as: "tags" %>
					</div>
					<div class="col col-lg-6 col-xs-12">
						<div class="feature-card-block">
							<h2 class="feature-card-title"><%= @free_project.title %></h2>
							<p class="feature-card-details">
								<% if !@free_project.duration.blank? %>
									<i class="fa fa-clock-o fa-1x" aria-hidden="true"></i> <%= @free_project.duration %> de vidéos
								<% end %>
							</p>
							<% if @free_project.ratings.count > 0 %>
								<p class="feature-card-rating"><%= render partial: 'common/ratings', object: @free_project.ratings %> - <%= link_to "Voir tous les avis", free_project_path(@free_project, anchor: "ratings"), class: "feature-card-link" %></p>
							<% else %>
								<p class="feature-card-rating">Pas encore d'avis</p>
							<% end %>
							<p class="feature-card-description text-justify"><%= @free_project.short_description %></p>
							<%= link_to "Plus de détails", free_project_path(@free_project), class: "btn btn-outline-success" %>
						</div>
					</div>
				</div>
			</div>					
		</div>
	</div>
</section>